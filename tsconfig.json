{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "es2021"
    ],
    "typeRoots": [
      "./src/types",
      "./node_modules/@types",
    ],
    "baseUrl": "./",
    "removeComments": true,
    "importHelpers": true,
    "newLine": "lf",
    "outDir": "./dist/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "alwaysStrict": true,
    "skipLibCheck": true
  }
}