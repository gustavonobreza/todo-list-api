generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DB_PATH")
}

model Todo {
  id          String    @id
  title       String
  description String?
  completed   Boolean   @default(false)
  target      DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @default(now())
}
